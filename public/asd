    <div id="planner-icon">🗺️</div>
    <div id="planner-window">
        <div class="planner-header">
            <h3>น้องไดโนช่วยวางแผนเที่ยว!</h3>
        </div>
        <div class="planner-body" id="planner-body"></div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Fade-in effect
            const fadeInElements = document.querySelectorAll('.fade-in');
            if (!!window.IntersectionObserver) {
                const observer = new IntersectionObserver((entries, observer) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            entry.target.classList.add('visible');
                            observer.unobserve(entry.target);
                        }
                    });
                }, { threshold: 0.1 });
                fadeInElements.forEach(el => { observer.observe(el); });
            }

            // Back to top button
            const backToTopButton = document.querySelector('.back-to-top');
            window.addEventListener('scroll', () => {
                if (window.scrollY > 300) {
                    backToTopButton.classList.add('show');
                } else {
                    backToTopButton.classList.remove('show');
                }
            });

            // Chatbot Planner
            const plannerIcon = document.getElementById('planner-icon');
            const plannerWindow = document.getElementById('planner-window');
            const plannerBody = document.getElementById('planner-body');
            let currentStep = 0;
            let userAnswers = {};
            const questions = [
                { id: 'days', text: 'สวัสดีครับ! 🦖 อยากให้น้องไดโนช่วยจัดทริปเที่ยวกาฬสินธุ์กี่วันดีครับ?', options: [ { text: '1 วัน (เช้า-เย็น)', value: 1 }, { text: '2 วัน 1 คืน', value: 2 } ] },
                { id: 'style', text: 'เยี่ยมเลย! แล้วอยากเที่ยวสไตล์ไหนดีครับ? (สไตล์นี้จะใช้ประมาณการค่าใช้จ่ายครับ)', options: [ { text: 'ประหยัด (เน้น Street Food)', value: 'budget' }, { text: 'สบายๆ (ร้านอาหาร+คาเฟ่)', value: 'balanced' }, { text: 'จัดเต็ม (ร้านดัง+ของฝาก)', value: 'luxury' } ] },
                { id: 'interest', text: 'คำถามสุดท้าย! สนใจเที่ยวแนวไหนเป็นพิเศษครับ?', options: [ { text: 'ไดโนเสาร์และประวัติศาสตร์', value: 'dino_history' }, { text: 'ธรรมชาติและคาเฟ่ชิลๆ', value: 'nature_cafe' } ] }
            ];

            plannerIcon.addEventListener('click', () => {
                plannerWindow.classList.toggle('open');
                if (plannerWindow.classList.contains('open') && currentStep === 0) {
                    startConversation();
                }
            });

            function startConversation() {
                currentStep = 0;
                userAnswers = {};
                plannerBody.innerHTML = '';
                askQuestion();
            }

            function askQuestion() {
                if (currentStep < questions.length) {
                    const q = questions[currentStep];
                    const questionDiv = document.createElement('div');
                    questionDiv.className = 'bot-question';
                    questionDiv.innerHTML = `<p>${q.text}</p>`;
                    const optionsDiv = document.createElement('div');
                    optionsDiv.className = 'planner-options';
                    q.options.forEach(option => {
                        const button = document.createElement('button');
                        button.innerText = option.text;
                        button.onclick = () => handleAnswer(q.id, option.value);
                        optionsDiv.appendChild(button);
                    });
                    questionDiv.appendChild(optionsDiv);
                    plannerBody.appendChild(questionDiv);
                    plannerBody.scrollTop = plannerBody.scrollHeight;
                } else {
                    generatePlan();
                }
            }

            function handleAnswer(id, value) {
                userAnswers[id] = value;
                currentStep++;
                const allButtons = plannerBody.querySelectorAll('.planner-options button');
                allButtons.forEach(btn => { if (!btn.parentElement.previousElementSibling.innerText.includes(questions[currentStep-1].text)) { btn.disabled = true; }});
                askQuestion();
            }

            function generatePlan() {
                const costs = { food_per_day: { budget: 300, balanced: 600, luxury: 1000 }, travel_per_day: { budget: 200, balanced: 400, luxury: 600 }, accommodation: { budget: 0, balanced: 800, luxury: 1500 }, activities: { budget: 100, balanced: 300, luxury: 500 } };
                const days = userAnswers.days;
                const style = userAnswers.style;
                let totalBudget = (costs.food_per_day[style] + costs.travel_per_day[style] + costs.activities[style]) * days;
                if (days === 2) { totalBudget += costs.accommodation[style]; }
                const itineraries = { dino_history: { day1: ["ตอนเช้า: พิพิธภัณฑ์สิรินธร", "ตอนบ่าย: พระธาตุยาคู"], day2: ["ตอนเช้า: วัดพุทธนิมิต (ภูค่าว)", "ตอนบ่าย: หมู่บ้านทอผ้าไหมแพรวา"] }, nature_cafe: { day1: ["ตอนเช้า: สะพานเทพสุดา", "ตอนบ่าย: หาดดอกเกด", "ตอนเย็น: นั่งชิลล์ที่ Malafe' Cafe'"], day2: ["ตอนเช้า: ผาเสวย", "ตอนบ่าย: บ้านมอ ดีฮัก (คาเฟ่ริมทุ่งนา)"] } };
                const selectedItinerary = itineraries[userAnswers.interest];
                const resultDiv = document.createElement('div');
                resultDiv.className = 'planner-result';
                let itineraryHtml = selectedItinerary.day1.map(item => `<li>${item}</li>`).join('');
                if (days === 2 && selectedItinerary.day2) { itineraryHtml += selectedItinerary.day2.map(item => `<li>${item}</li>`).join(''); }
                resultDiv.innerHTML = `<h4>นี่คือแผนเที่ยวสำหรับคุณ!</h4><div class="budget">ประมาณการค่าใช้จ่าย: ฿${totalBudget.toLocaleString()}<br><small>(ต่อคน, ไม่รวมค่าเดินทางมาจังหวัด)</small></div><h4>แผนการเดินทาง:</h4><ul>${itineraryHtml}</ul>`;
                const restartButton = document.createElement('button');
                restartButton.innerText = 'วางแผนใหม่';
                restartButton.style.cssText = 'width: 100%; border: none; padding: 10px; background-color: #ff5722; color: white; border-radius: 20px; font-size: 16px; margin-top: 20px; cursor: pointer;';
                restartButton.onclick = startConversation;
                resultDiv.appendChild(restartButton);
                plannerBody.appendChild(resultDiv);
                plannerBody.scrollTop = plannerBody.scrollHeight;
            }
        });
    </script>
    <script>
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/sw.js')
                    .then(reg => console.log('Service Worker registered', reg))
                    .catch(err => console.log('Service Worker not registered', err));
            });
        }
    </script>
</body>
</html>